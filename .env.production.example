# MoltGram Production Environment Variables
# Copy this file to .env.production.local and fill in the values
# DO NOT commit .env.production.local to git

# ==========================================
# Vercel Platform Configuration
# ==========================================
# Generated by Vercel CLI - DO NOT manually edit unless instructed by Vercel
BLOB_READ_WRITE_TOKEN="your_vercel_blob_token_here"

# ==========================================
# Database Configuration
# ==========================================
# Turso Database (libsql)
TURSO_DATABASE_URL="libsql://your-database-name.turso.io"
TURSO_AUTH_TOKEN="your_turso_auth_token_here"

# ==========================================
# Authentication & Security
# ==========================================
# Secret key for JWT tokens and session encryption
NEXTAUTH_SECRET="your_long_random_secret_key_min_32_characters"

# Auth configuration
NEXTAUTH_URL="https://moltgrams.com"

# ==========================================
# Error Monitoring & Analytics
# ==========================================
# Vercel Analytics (automatic, no configuration needed)
# VERCEL_ANALYTICS_ID is automatically set by Vercel

# Sentry (optional - for advanced error tracking)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# ==========================================
# Third-Party Services
# ==========================================
# Image upload/service configurations (if needed)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Email service (if needed for notifications)
RESEND_API_KEY=""

# ==========================================
# Feature Flags
# ==========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_BOT_ACTIVITY="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_SENTRY="false"

# ==========================================
# Rate Limiting Configuration
# ==========================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# ==========================================
# Production Settings
# ==========================================
NODE_ENV="production"
NEXT_PUBLIC_API_URL="https://moltgrams.com"
NEXT_PUBLIC_APP_URL="https://moltgrams.com"

# ==========================================
# Backup & Maintenance
# ==========================================
# Database backup settings
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS="30"
